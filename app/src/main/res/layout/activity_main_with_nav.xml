<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Fragment 容器 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 底部导航栏容器 -->
    <FrameLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bottom_nav_background"
            android:elevation="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/nav_home_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/nav_item_color"
                    android:contentDescription="首页" />

                <TextView
                    android:id="@+id/nav_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="聊天"
                    android:textSize="10sp"
                    android:textColor="@color/nav_item_color"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_explore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/nav_explore_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_explore"
                    android:tint="@color/nav_item_color"
                    android:contentDescription="探索" />

                <TextView
                    android:id="@+id/nav_explore_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="探索"
                    android:textSize="10sp"
                    android:textColor="@color/nav_item_color"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_favorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/nav_favorite_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_favorite"
                    android:tint="@color/nav_item_color"
                    android:contentDescription="追踪" />

                <TextView
                    android:id="@+id/nav_favorite_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="追踪"
                    android:textSize="10sp"
                    android:textColor="@color/nav_item_color"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
